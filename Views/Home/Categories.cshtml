

@model IEnumerable<Category>

<!-- ======= Events Section ======= -->
<section id="events" class="events">
    <div class="container mt-2" data-aos="fade-up">
        
        
        <div class="owl-carousel events-carousel" data-aos="fade-up" data-aos-delay="100">
            @foreach (var Category in Model)
            {
            <div class="mt-5 pt-5">

                <div class="row event-item mt-5 pt-5">
                    <div class="col-lg-6 mt-5 pt-5">
                        <img src="@Category.CatImg " class="img-fluid"  alt="">
                    </div>
                    <div class="col-lg-6 pt-5 mt-5  content">
                        <h3>@Category.Name</h3>

                        <p class="font-italic pt-5">
                            @Category.Discription
                        </p>
                    </div>

                </div>
                <div class="section-title mt-3">
                    <a asp-action="AllNews" asp-controller="Home" asp-route-id="@Category.Id"> Go To @Category.Name</a>
                </div>

            </div>

            }

        </div>        
    </div>
</section><!-- End Events Section -->
